@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <section class="page-section2">
            <div class="form-group">
                <p class="text-info">
                    Du hast dich erfolgreich mit <strong>@Model.LoginProvider</strong> authentifiziert.
                    Bitte gib hier deine Emailadresse ein unter der wir dich erreichen können und klicke den Registrieren Button zum Abschließen. 
                </p>
            </div>
            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary text-center">Registrieren</button>
            </form>
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
