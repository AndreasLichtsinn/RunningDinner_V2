@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Passwort ändern";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="text-uppercase page-header">@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-9 bg-light">
        <div class="col-md-9">
            <div class="form-group">
                <p class="text-info">
                    Du hast noch kein lokales Konto auf dieser Seite. Füge ein lokales Konto hinzu um
                    dich ohne externe Logins anmelden zu können.
                </p>
            </div>
            <form id="set-password-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <b><label asp-for="Input.NewPassword"></label></b>
                <div class="form-group">
                    <label class="mdc-text-field mdc-text-field--outlined" data-mdc-auto-init="MDCTextField">
                        <input asp-for="Input.NewPassword" type="password" class="mdc-text-field__input" aria-labelledby="new-password-id">
                        <div class="mdc-notched-outline">
                            <div class="mdc-notched-outline__leading"></div>
                            <div class="mdc-notched-outline__notch">
                                <span class="mdc-floating-label" id="new-password-id">Neues Passwort</span>
                            </div>
                            <div class="mdc-notched-outline__trailing"></div>
                        </div>
                    </label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <b><label asp-for="Input.ConfirmPassword"></label></b>
                <div class="form-group">
                    <label class="mdc-text-field mdc-text-field--outlined" data-mdc-auto-init="MDCTextField">
                        <input asp-for="Input.ConfirmPassword" type="password" class="mdc-text-field__input" aria-labelledby="confirm-password-id">
                        <div class="mdc-notched-outline">
                            <div class="mdc-notched-outline__leading"></div>
                            <div class="mdc-notched-outline__notch">
                                <span class="mdc-floating-label" id="confirm-password-id">Neues Passwort bestätigen</span>
                            </div>
                            <div class="mdc-notched-outline__trailing"></div>
                        </div>
                    </label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Passwort ändern</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            mdc.autoInit();
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}